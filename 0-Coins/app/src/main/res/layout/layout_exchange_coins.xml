<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_coin_origin"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:src="@drawable/ic_ldoge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_exchange"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:src="@drawable/ic_exchange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_coin_origin"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_coin_target"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:src="@drawable/ic_mexican_peso"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_exchange"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/teal_200" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
