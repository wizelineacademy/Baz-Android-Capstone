<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tool="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:elevation="6dp"    app:cardBackgroundColor="#BAF4F4F4"    app:cardCornerRadius="16dp"    app:cardUseCompatPadding="true">    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/itemBook"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#BAF4F4F4"        android:padding="16dp">        <TextView            android:id="@+id/tv_book"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/black"            android:textSize="24sp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            tool:text="Available book" />        <ImageView            android:layout_width="60dp"            android:layout_height="60dp"            android:contentDescription="Icon Book"            app:layout_constraintBaseline_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:srcCompat="@android:drawable/btn_star_big_on"            tool:srcCompat="@tools:sample/avatars" />    </androidx.constraintlayout.widget.ConstraintLayout></androidx.cardview.widget.CardView>