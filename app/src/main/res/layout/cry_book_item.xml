<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_16_dp"
        android:layout_marginVertical="@dimen/dimens_16_dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/dimens_16_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_circle"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/image_id"
                android:layout_width="@dimen/dimens_84_dp"
                android:layout_height="@dimen/dimens_84_dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_aave"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dimens_34_dp"
                android:layout_height="@dimen/dimens_34_dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_id"
                app:layout_constraintStart_toStartOf="@+id/txt_book"
                app:layout_constraintTop_toBottomOf="@+id/txt_book"
                app:srcCompat="@drawable/ic_right_double_arrow"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/image_id_end"
                android:layout_width="@dimen/dimens_34_dp"
                android:layout_height="@dimen/dimens_34_dp"
                android:layout_marginStart="@dimen/dimens_8_dp"
                app:layout_constraintBottom_toBottomOf="@+id/image"
                app:layout_constraintStart_toEndOf="@+id/image"
                app:layout_constraintTop_toTopOf="@+id/image"
                app:srcCompat="@drawable/ic_bitcoin_cash"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_book"
                style="@style/subtitle_h1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cry_book_fake"
                android:layout_marginStart="@dimen/dimens_8_dp"
                app:layout_constraintStart_toEndOf="@+id/image_id"
                app:layout_constraintTop_toTopOf="@+id/image_id" />

            <TextView
                android:id="@+id/txt_book_end"
                style="@style/subtitle_h1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/cry_book_fake_end"
                android:layout_marginStart="@dimen/dimens_8_dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_id_end"
                app:layout_constraintStart_toEndOf="@+id/image_id_end"
                app:layout_constraintTop_toTopOf="@+id/image_id_end" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>