<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCrypto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text = "@string/coin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_crypto_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/txtCrypto_name"
            app:layout_constraintTop_toTopOf="@+id/txtCrypto_name"
            tools:text = "BTC_MX"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCrypto_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "TYPE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/txtCrypto_name"
            app:layout_constraintStart_toStartOf="@id/txtCrypto_name"
            android:layout_marginTop="16dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_value_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/txt_crypto_value"
            app:layout_constraintBottom_toBottomOf="@id/txtCrypto_Type"
            tools:text = "Ask"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/price"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="64dp"
            app:layout_constraintTop_toTopOf="@id/txt_crypto_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_crypto_value"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_value_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/txt_price"
            app:layout_constraintStart_toEndOf="@id/txt_price"
            android:layout_marginStart="8dp"
            tools:text = "12"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/amount"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/txt_price"
            app:layout_constraintTop_toTopOf="@id/txt_value_type"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_value_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/txt_amount"
            app:layout_constraintStart_toEndOf="@id/txt_price"
            android:layout_marginStart="32dp"
            tools:text = "12" />

</androidx.constraintlayout.widget.ConstraintLayout>

