<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp">


    <ImageView
        android:id="@+id/img_coin"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="5dp"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/img_coin"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tv_value_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Mínimo: 100.00"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_value_max"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_value_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Máximo: 10000.00"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tv_value_min" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/purple_500" />

</androidx.constraintlayout.widget.ConstraintLayout>