<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_order_book_asks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_asks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asks"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_book"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book: "
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_asks" />

        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: "
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_book" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/content_order_book_bids"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_book"
            />

        <TextView
            android:id="@+id/book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_book"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_book" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_amount" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_price" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_order_book_bids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_price">

            <TextView
                android:id="@+id/txt_bids_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bids"
                android:textSize="28sp"
                app:layout_constraintBottom_toTopOf="@+id/txt_book_bids"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_book_bids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book: "
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/txt_amount_bids"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_bids_title" />

            <TextView
                android:id="@+id/txt_amount_bids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: "
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/txt_price_bids"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt_price_bids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/book_bids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_book_bids"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_book_bids" />

            <TextView
                android:id="@+id/amount_bids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 000"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_amount_bids"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_amount_bids" />

            <TextView
                android:id="@+id/price_bids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 000"
                android:textSize="24sp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_price_bids"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_price_bids"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view01"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/teal_700"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/content_order_book_bids"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>